<main>
    <div class="container">
        <div class="tracking-section">
            <h2>Live Device Tracking</h2>
            <div class="tracking-info">
                <p>Track devices in real-time using GPS coordinates</p>
                <div class="status-indicator">
                    <span class="status-dot"></span>
                    <span>Tracking Active</span>
                </div>
            </div>
        </div>
        
        <div class="map-container">
            <div id="map"></div>
        </div>
        
        <div class="controls">
            <button id="startTracking" class="btn btn-primary">Start Tracking</button>
            <button id="stopTracking" class="btn btn-secondary">Stop Tracking</button>
            <button id="centerMap" class="btn btn-info">Center Map</button>
        </div>
    </div>
</main>
